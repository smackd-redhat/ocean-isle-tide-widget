    <resources xmlns:tools="http://schemas.android.com/tools">
        <!-- Base application theme. -->
        <style name="Theme.OceanIsleTideWidget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Primary brand color. -->
            <item name="colorPrimary">@color/ocean_blue</item>
            <item name="colorPrimaryVariant">@color/deep_blue</item>
            <item name="colorOnPrimary">@color/widget_background</item>
            <item name="colorSecondary">@color/wave_light</item>
            <item name="colorSecondaryVariant">@color/wave_dark</item>
            <item name="colorOnSecondary">@color/text_primary</item>

            <!-- Background colors -->
            <item name="android:colorBackground">@color/background</item>
            <item name="colorSurface">@color/widget_background</item>
            <item name="colorOnSurface">@color/text_primary</item>

            <!-- Status bar color. -->
            <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        </style>

        <!-- Widget container theme. -->
        <style name="Theme.OceanIsleTideWidget.AppWidgetContainer" parent="Theme.OceanIsleTideWidget">
            <!-- Transparent system bars for widgets -->
            <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
            <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
        </style>

    </resources>
    
