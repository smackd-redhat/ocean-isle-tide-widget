<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background"
    android:gravity="center">

    <!-- Icon -->
    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_tide_widget"
        android:background="@drawable/widget_background"
        android:padding="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/config_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure Tide Widget"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/deep_blue"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your widget will display live tide data for Ocean Isle Beach, North Carolina in a beautiful wave format."
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- Location Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Location Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/config_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ocean Isle Beach, NC\nNOAA Station: 8658163"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="• Updates every 30 minutes\n• Shows 24-hour tide forecast\n• Highlights high and low tides\n• Data from NOAA Tides &amp; Currents"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/config_cancel_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_secondary"
            android:text="Cancel"
            android:textColor="@color/deep_blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/config_add_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_primary"
            android:text="Add Widget"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>